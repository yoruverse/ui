---
import { SEO } from "astro-seo";
import "@/styles/global.css";
import "@fontsource-variable/geist";
import "@fontsource-variable/geist-mono";

interface Props {
	title?: string;
	description?: string;
	canonical?: string;
	noindex?: boolean;
}

const { 
	title = "Yoruverse UI - React & Astro Component Library",
	description = "A comprehensive UI component library built with React, Astro, and TailwindCSS. Features accessible components, TypeScript support, and beautiful documentation.",
	canonical,
	noindex = false
} = Astro.props;

const siteUrl = "https://ui.yoruverse.com";
const canonicalURL = canonical || new URL(Astro.url.pathname, siteUrl).href;
---

<html lang="en" class="dark">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		
		<SEO
			title={title}
			description={description}
			canonical={canonicalURL}
			noindex={noindex}
			openGraph={{
				basic: {
					title: title,
					type: "website",
					image: `${siteUrl}/favicon.svg`,
					url: canonicalURL,
				},
				optional: {
					description: description,
					siteName: "Yoruverse UI",
					locale: "en_US",
				},
			}}
			twitter={{
				creator: "@yoruverse",
				site: "@yoruverse",
				card: "summary_large_image",
				title: title,
				description: description,
				image: `${siteUrl}/favicon.svg`,
			}}
			extend={{
				link: [
					{
						rel: "sitemap",
						href: "/sitemap-index.xml",
					},
				],
				meta: [
					{
						name: "keywords",
						content: "React components, Astro components, UI library, TypeScript, TailwindCSS, accessible components, design system, web components",
					},
					{
						name: "author",
						content: "Yoruverse",
					},
					{
						name: "robots",
						content: noindex ? "noindex, nofollow" : "index, follow",
					},
					{
						property: "og:site_name",
						content: "Yoruverse UI",
					},
				],
			}}
		/>
	</head>
	<body>
        <slot />
	</body>
</html>
